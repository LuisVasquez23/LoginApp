@using Microsoft.AspNetCore.Identity;
@using Domain.Models;

@inject SignInManager<UserModel> _singInManager;

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
    </li>

    @if (_singInManager.IsSignedIn(User))
    {
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-action="Logout" asp-controller="Auth" class="nav-link">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-action="Index" asp-controller="Auth" class="nav-link">Login</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-action="Register" asp-controller="Auth" class="nav-link">Register</a>
        </li>
    }

    
    
</ul>